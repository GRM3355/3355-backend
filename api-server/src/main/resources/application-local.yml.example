#jwt
jwt:
  secret: [JWT 시크릿키]
  access-token-expiration-time: 86400000 # 24시간
  location-token-expiration-time: 600000 # 10분
#cors
cors:
  allowed-origins: "http://localhost:8082,http://example.com"
#공공데이터 api
openapi:
  serviceKey: [서비스키]
#batch 파일 경로
batch:
  json:
    file:
      path: data/json/festival
#logging 레벨
logging:
  level:
    org.springframework.orm.jpa: DEBUG
    org.springframework.beans.factory: DEBUG