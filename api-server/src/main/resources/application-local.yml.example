# COPY THIS FILE AND PASTE IT TO YOUR application-local File.
spring:
  datasource:
    url: jdbc:postgresql://zonie_postgres_db:5432/zonie_main?sslmode=disable&connectTimeout=10&options=-c TimeZone%3DAsia/Seoul
    username: [postgres 아이디]
    password: [postgres 비밀번호]
    driver-class-name: org.postgresql.Driver
  data:
    mongodb:
      uri: mongodb://[mongo 아이디]:[mongo 비밀번호]@mongo_db:27017/zonie_chat
    redis:
      host: redis_cache
      port: 6379
  jpa:
    hibernate:
      ddl-auto: update
    show-sql: true
    properties:
      hibernate:
        format_sql: true
        dialect: org.hibernate.dialect.PostgreSQLDialect
