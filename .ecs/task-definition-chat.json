{
  "family": "zonie-chat-server-task-def",
  "executionRoleArn": "arn:aws:iam::548182874697:role/ecsTaskExecutionRole",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "2048",
  "memory": "5120",
  "containerDefinitions": [
    {
      "name": "zonie-chat-server",
      "image": "<IMAGE_URI>",
      "portMappings": [
        {
          "containerPort": 8081,
          "hostPort": 8081,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8081/health || exit 1"
        ],
        "interval": 10,
        "timeout": 5,
        "retries": 5,
        "startPeriod": 100
      },
      "environment": [
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "prod"
        }
      ],
      "secrets": [
        {
          "name": "DB_PROD_URL",
          "valueFrom": "DB_PROD_URL"
        },
        {
          "name": "DB_PROD_USERNAME",
          "valueFrom": "DB_PROD_USERNAME"
        },
        {
          "name": "DB_PROD_PASSWORD",
          "valueFrom": "DB_PROD_PASSWORD"
        },
        {
          "name": "MONGO_PROD_URI",
          "valueFrom": "MONGO_PROD_URI"
        },
        {
          "name": "REDIS_PROD_HOST",
          "valueFrom": "REDIS_PROD_HOST"
        },
        {
          "name": "REDIS_PROD_PASSWORD",
          "valueFrom": "REDIS_PROD_PASSWORD"
        },
        {
          "name": "JWT_SECRET_KEY",
          "valueFrom": "JWT_SECRET_KEY"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/zonie-chat-server",
          "awslogs-region": "ap-northeast-2",
          "awslogs-create-group": "true",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}